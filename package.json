{
  "name": "@kitiumai/npm-package-tester",
  "version": "1.0.1",
  "description": "AI-powered CLI testing tool for npm packages with Docker isolation, private package support, and automated test generation using Claude, GPT-4, Gemini",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "npm-package-tester": "dist/cli/index.js",
    "npt": "dist/cli/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepublishOnly": "npm run lint && npm run test && npm run build"
  },
  "keywords": [
    "npm",
    "testing",
    "cli",
    "cli-testing",
    "npm-testing",
    "package-testing",
    "docker",
    "docker-testing",
    "automation",
    "ci-cd",
    "continuous-integration",
    "smoke-test",
    "integration-testing",
    "e2e-testing",
    "end-to-end",
    "ai",
    "ai-testing",
    "artificial-intelligence",
    "claude",
    "anthropic",
    "openai",
    "gpt-4",
    "gemini",
    "groq",
    "llm",
    "private-packages",
    "npm-registry",
    "scoped-packages",
    "command-detection",
    "validation",
    "test-automation",
    "typescript",
    "nodejs",
    "node"
  ],
  "author": "Ashish Yadav <ashish.yd@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/kitium-ai/npm-package-tester#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kitium-ai/npm-package-tester.git"
  },
  "bugs": {
    "url": "https://github.com/kitium-ai/npm-package-tester/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "dockerode": "^4.0.2",
    "execa": "^5.1.1",
    "ora": "^5.4.1",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "@types/dockerode": "^3.3.23",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/semver": "^7.5.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
